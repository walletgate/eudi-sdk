{
  "name": "@walletgate/eudi",
  "version": "2.0.1",
  "type": "module",
  "description": "EUDI Wallet SDK for JavaScript/TypeScript - EU Digital Identity verification made simple",
  "main": "dist/node/index.js",
  "module": "dist/browser/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "walletgate": "dist/node/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepublishOnly": "npm run build && npm run typecheck && npm run lint",
    "build": "npm run clean && npm run build:node && npm run build:cli && npm run build:browser && npm run build:types",
    "build:node": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/node/index.js",
    "build:cli": "esbuild src/cli.ts --bundle --platform=node --target=node18 --outfile=dist/node/cli.js --banner:js=\"#!/usr/bin/env node\"",
    "build:browser": "esbuild src/index.ts --bundle --platform=browser --target=es2020 --outfile=dist/browser/index.js",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format:imports": "eslint src --ext .ts --fix --rule 'import/order: [\"warn\", {\"alphabetize\": {\"order\": \"asc\", \"caseInsensitive\": true}}]'",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc src/index.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/node/index.js",
      "browser": "./dist/browser/index.js",
      "default": "./dist/node/index.js"
    }
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.4",
    "qrcode": "^1.5.4",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "keywords": [
    "eudi",
    "eudi-wallet",
    "eu-digital-identity",
    "european-digital-identity",
    "digital-wallet",
    "age-verification",
    "identity-verification",
    "walletgate",
    "mdoc",
    "iso-18013-5",
    "verifiable-credentials",
    "sdk"
  ],
  "engines": {
    "node": ">=20"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walletgate/eudi-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/walletgate/eudi-sdk/issues"
  },
  "homepage": "https://walletgate.app",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
